<% @entries.each do |entry| %>
    <div class="row">
      <div class="col-xs-8 col-xs-offset-2">
        <div class="well well-lg">
          <div class="article-title">
            <%= link_to entry.title + "     " + entry.date.strftime('%a %d %b %Y'), entry_path(entry) %>
          </div>
          <div class="article-body">
            <%= truncate(entry.text.html_safe, length: 5000) %>
          </div>
          <% if user_signed_in? && (current_user == entry.user) %>
            <div class="article-actions">
              <%= link_to "Edit this article", edit_entry_path(entry), class: "btn btn-xs btn-primary" %>
              <%= link_to "Delete this article", entry_path(entry), method: :delete,
                                              data: {confirm: "Are you sure you want to delete the article?"},
                                              class: "btn btn-xs btn-danger" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
<% end %>