<% if obj.errors.any? %>
  	<div class="card text-white bg-danger my-3">
	  	<div class="card-header">
			Es sind Fehler aufgetreten:
	  	</div>
  		<div class="card-body">
    		<ul>
				<% obj.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
				<% end %>
			</ul>
  		</div>
	</div>
<% end %>