<h1 align="center">Neuer Eintrag</h1>

<%= render 'shared/errors', obj: @entry %>

<div class="row">
  <div class="col-xs-12">

    <%= form_for(@entry, :html => {class: "form-horizontal", role: "form"}) do |f| %>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label "Titel" %>
      </div>
      <div class="col-sm-8">
        <%= f.text_field :title, class: "form-control", placeholder: "Titel", autofocus:true %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label :text %>
      </div>
      <div class="col-sm-8">
        <%= f.text_area :text, class: "form-control", placeholder: "Text", rows: 10 %>
      </div>
    </div>
    <div class="form-group">
      <div class="control-label col-sm-2">
        <%= f.label "Datum" %>
      </div>
      <div class="col-sm-8">
        <%# f.select :date, options_for_select([['Lisbon'], ['Madrid']]) %>
        <%= f.date_field :date, class: "form-control", placeholder: "Datum" %>
      </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit "Speichern", class: "btn btn-primary btn-lg" %>
      </div>
    </div>

    <% end %>

    <div class="col-xs-4 col-xs-offset-4">
